{
  "intents": [
    {
      "tag": "greeting",
      "patterns": ["hello", "hi", "hey", "good morning", "good afternoon"],
      "responses": ["Hello! How can I help you today?", "Hi there! What can I do for you?"]
    },
    {
      "tag": "goodbye",
      "patterns": ["bye", "goodbye", "see you", "talk later"],
      "responses": ["Goodbye! Have a great day!", "See you later!"]
    },
    {
      "tag": "track_order",
      "patterns": ["where is my order", "track my order", "order status", "check my order"],
      "responses": ["Sure! Can you provide your order number?", "I can help track your order. What's your order ID?"],
      "context_set": "expectingOrderId"
    },
    {
      "tag": "refund",
      "patterns": ["refund", "return", "cancel my order"],
      "responses": ["Was it an online or in-store purchase?"],
      "context_set": "expectingPurchaseType"
    },
    {
      "tag": "order_type_online",
      "patterns": ["online"],
      "responses": ["Got it! Please provide your order number."],
      "context_filter": "expectingPurchaseType",
      "context_set": "expectingOrderId"
    },
    {
      "tag": "order_type_store",
      "patterns": ["store", "in-store", "instore"],
      "responses": ["Got it! Please provide your order number."],
      "context_filter": "expectingPurchaseType",
      "context_set": "expectingOrderId"
    },
    {
      "tag": "provide_order_id",
      "patterns": ["\\d{3,}"],
      "responses": ["Thanks! Your order {orderId} is being processed."],
      "context_filter": "expectingOrderId"
    },
    {
      "tag": "human_support",
      "patterns": ["human", "support", "talk to agent"],
      "responses": ["Okay! I will connect you to a human agent shortly."],
      "set_human": true
    },
    {
      "tag": "thanks",
      "patterns": ["thank you", "thanks", "thx"],
      "responses": ["You're welcome!", "Happy to help!"]
    },
    {
      "tag": "still_there",
      "patterns": ["are you still there?", "hello?"],
      "responses": ["Yes, I'm here! How can I assist you?"]
    }
  ]
}
